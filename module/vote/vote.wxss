page {
  background-attachment: fixed;
  animation: colorswitch 20s infinite;
}

/* 背景颜色循环渐变 */

@keyframes colorswitch {
  0% {
    background-image: linear-gradient(to left, #a8edea 0%, #fed6e3 100%);
  }

  25% {
    background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%);
  }

  75% {
    background-image: linear-gradient(to right, #a8edea 0%, #fed6e3 100%);
  }

  100% {
    background-image: linear-gradient(to bottom, #a8edea 0%, #fed6e3 100%);
  }
}

.sub-title {
  margin-top: 20rpx;
  font-size: 180%;
  font-weight: bold;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  background-image: linear-gradient(to right, #fc1a5e 0%, #f8d50e 100%);
  text-shadow: 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.2);
}

.rule {
  font-size: 85%;
  margin: 20rpx auto;
  border-radius: 10rpx;
  border: 1rpx solid rgb(221, 250, 141);
  width: 160rpx;
  padding: 5rpx;
  color: rgb(1, 128, 85);
}

/* 投票选项 */

.vote-list {
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  border: 2rpx solid rgba(221, 221, 221);
}

.item {
  flex: 5;
  display: flex;
  flex-direction: column;
  padding: 5rpx;
}

.count {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 120%;
  font-weight: bold;
  color: rgb(0, 153, 255);
}

.p1 {
  display: flex;
  flex-direction: row;
  font-weight: bold;
  padding: 0rpx 10rpx;
}

.cp-list {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 5rpx 10rpx;
}

.name {
  color: gray;
  font-size: 85%;
}

/* 提交 */

.form {
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.vote-btn {
  margin: 30rpx;
  width: 550rpx;
  background: rgb(0, 189, 0);
  color: white;
}

button::after {
  border: 0;
}

input {
  border: 1rpx solid rgba(128, 128, 128, 0.5);
  height: 55rpx;
  padding: 10rpx;
  text-align: center;
  border-radius: 15rpx;
  width: 450rpx;
}
