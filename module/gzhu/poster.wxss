@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

/* 背景图 */

.bg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -10;
}

/* 占位 */

.blank {
  margin-top: 450rpx;
}

swiper {
  height: 350rpx;
}

/* 头像 */

.avatar, .frame {
  display: block;
  border-radius: 20rpx;
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  position: absolute;
}

/* 切换 */

.switch {
  display: flex;
  justify-content: space-between;
  margin: 0 100rpx;
  height: 20rpx;
}

.hover-btn {
  padding: 1rpx;
}

.switch-btn {
  position: relative;
  top: -230rpx;
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
  border-radius: 50%;
  background-color: white;
  opacity: 0.7;
}

/* 按键 */

.btns {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
}

.btns .btn {
  width: 300rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #fb4a50;
  border: 3px solid #fff;
  box-sizing: border-box;
  font-size: 35rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.count-text{
  position: fixed;
  width: 100%;
}