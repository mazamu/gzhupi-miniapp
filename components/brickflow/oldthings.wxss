.oldthings .content {
  margin-left: 50rpx;
}

/* 基本信息 */

.oldthings .base-info {
  display: flex;
  align-items: center;
  padding: 10rpx;
  /* border: 1rpx solid red; */
}

.oldthings .base-info .title {
  margin: 0 30rpx;
  flex: 5;
}

.oldthings .base-info .price {
  flex: 1;
  font-size: 150%;
  color: var(--olive);
  margin-right: 10rpx;
  font-weight: bold;
}

.oldthings .desc-text {
  margin: 10rpx 0;
}

/* 物品图片 */

.oldthings .media-previewer {
  display: flex;
  align-items: center;
}

.oldthings .pics {
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.oldthings .pics.size_1 {
  width: 350rpx;
  height: 250rpx;
}

.oldthings .pics.size_2 {
  width: 300rpx;
  height: 200rpx;
}

.oldthings .pics.size_3 {
  width: 200rpx;
  height: 200rpx;
}

/* 卡片底部 */

.oldthings .footer {
  display: flex;
  padding: 10rpx 0;
  /* border: 1rpx solid red */
}
