@import "./oldthings.wxss";

/* 瀑布流容器主体 */

.list-container {
  display: flex;
  flex-direction: row;
  padding: 15rpx;
}

/* 左右两列 */

.list-side-box {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-right: 15rpx;
}

.list-side-box:last-child {
  margin-right: 0;
}

/* 每一列 */

.list-item {
  break-inside: avoid;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

/* 每一个卡片 */

.list-box {
  position: relative;
  border-radius: 5px;
}

/* 内容区 不包含用户区 */

.list-box.is-expand .list-box_content {
  height: auto;
}

/* 内容主体 */

.list-box_content {
  /* height: 71px; */
  min-height: 71px;
  font-size: 15px;
  line-height: 24px;
  overflow: hidden;
}

