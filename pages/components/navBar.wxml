<!-- navBarHeight：导航栏高度 = 状态栏高度 + 40 -->
<!-- bgColor：导航栏背景颜色支持rgba -->
<cover-view class='navBar' style='height:{{navBarHeight}}px;background-color:{{navColor}}'>

  <!-- title-bar：标题栏，包含返回按键，高度 = 40 -->
  <cover-view class='title-bar' style='height:{{titleBarHeight}}px;margin-top:{{statusBarHeight}}px'>
    <!-- 反回按键，可隐藏 -->
    <cover-image class='back-btn' hidden='{{hideBackBtn}}' bindtap='navigateBack' src='/assets/back.png'></cover-image>
    
    <!-- 外部可编辑区域，居中，width最大590rpx -->
    <!-- 此部分有内容请设置参数 hideTitle='true' -->
    <slot></slot>

    <cover-view hidden='{{hideTitle}}' class='title'>
      <!-- titleColor：传入标题 -->
      <cover-view style='color:{{titleColor}};opacity:1'>{{title}}</cover-view>
    </cover-view>

    <!-- 对称布局占位，透明 -->
    <cover-image class='back-btn' hidden='{{hideBackBtn}}' src='/assets/back.png' mode='widthFix' style='opacity:0'></cover-image>

  </cover-view>
</cover-view>

<!-- 导航栏空白占位 -->
<view style='height:{{navBarHeight}}px'></view>