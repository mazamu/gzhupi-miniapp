page {
  background: #ddd;
}

/* 背景图片 */
.bg {
  width: 100%;
  height: 100%;
  z-index: -1000;
  filter: blur(100rpx);
    position: fixed;
  top: 0;
}

.base-info {
  margin: 20rpx 40rpx;
}

.price {
  flex: 1.8;
  font-size: 180%;
  color: var(--olive);
  margin-right: 10rpx;
  font-weight: bold;
}

.line {
  text-decoration: line-through;
}

.main-content {
  background: white;
  margin: 30rpx;
  border-radius: 20rpx;
}

.contont-text {
  padding: 20rpx;
}

.title {
  font-size: 130%;
  font-weight: bold;
}

.imgs {

  margin: 0;
  width: 100%;
  display: block;
}
