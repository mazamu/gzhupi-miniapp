.weekChoice {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 999;
  opacity: 0.9;
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
}

.box {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  grid-template-rows: repeat(5, 1fr);
  position: absolute;
  width: 300px;
  height: 300px;
  background-color: #fff;
  border-radius: 1rem;
  box-shadow: 20px 20px 60px gray;
}

.eachWeek {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
  margin: 5px;
  font-size: 1.5em;
  color: #aaaaaa;
  transition: color 0.5s ease;
}

.activeClass {
  /* border-radius: 1rem; */
  color: #5800a5;
  /* background-color: gray; */
}

.tab {
  position: absolute;
  height: 50px;
  width: 50px;
  margin: 5px;
  border-radius: 1rem;
  opacity: 0.3;
  background: linear-gradient(45deg, #05abe0 0%, #8200f4 100%);
  transition: 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

