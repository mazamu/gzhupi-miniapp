@import "style.wxss";


.today-course {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 20rpx;
  padding: 20rpx 10rpx;
  color: #676767;
  /* border-bottom: red solid 1rpx; */
}


.class-time {
  flex: 2;
  font-size: 130%;
  font-weight: bold;
  text-align: right;
  padding: 20rpx;
}

.courst-detail {
  /* flex: 5; */
  border-bottom: #ddd solid 1rpx;
  padding: 10rpx;
  /* text-align: left; */
}

.location-icon {
  display: flex;
  align-items: center;
  padding-right: 10rpx;
  /* border: red solid 1rpx; */
}

.classroom {
  display: flex;
  align-items: center;
  /* padding-bottom: 5rpx; */
  font-size: 90%;
  /* border: red solid 1rpx; */
}


.btn {
  background-color: #18b3eb;
  margin-top: 20rpx;
  width: 350rpx;
  border-radius: 15rpx;
  box-shadow: 3rpx 15rpx 30rpx 0rpx #a4e4fc;
  color: white;
}

button::after {
  border: 0;
}


.no-course {
  padding: 30rpx;
  color: grey;
  text-align: center;
}

.bind-btn {
  width: 300rpx;
  background-color: #18b3eb;
  color: white;
  margin-bottom: 40rpx;
}