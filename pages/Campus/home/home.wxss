/* 悬浮图标 */

.float-icon {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 2;
  /* box-shadow: 0rpx 3rpx 5rpx 5rpx #ddd; */
}

.share-icon {
  height: 70rpx;
  width: 70rpx;
  position: fixed;
  bottom: 180rpx;
  right: 50rpx;
  z-index: 2;
}

.hover-icon {
  opacity: 0.5;
}

/* 分割线 */

.divide-line {
  height: 35rpx;
  background-color: #f2f6f9;
}

.ami {
  animation: fadeInDown0 1s;
}

/* 从上往下淡入 */

@keyframes fadeInDown0 {
  0% {
    transform: translate3d(0, -20%, 0);
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}


