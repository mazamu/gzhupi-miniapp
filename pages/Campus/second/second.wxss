.info {
  color: #888;
  font-size: 28rpx;
  padding: 0rpx 0 20rpx 0;
  overflow: hidden;
}

.detail-title {
  height: 150rpx;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120%;
  font-weight: bold;
}

/* 弹窗 */

.modal {
  font-size: 120%;
  background: rgba(250, 250, 250, 0.9);
  padding: 10rpx 20rpx 100rpx 20rpx;
}

.part {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
}

.title {
  font-weight: bold;
  padding: 10rpx 0;
  color: rgb(88, 88, 88);
}

.selection {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 20rpx;
  width: 500rpx;
}
