/* pages/Campus/evaluation/index.wxss */

page {
  background: #f8f8f8;
}
.eval_card{
  background-color: white;
  width: 96%;
  border-radius: 24rpx;
  overflow: hidden;
  margin: 30rpx 0;
  margin-left: 2%;
  box-shadow: 0 0 8rpx 2rpx #e6e6e6;
}
.eval_card:first-of-type{
  margin-top: 120rpx;
}
.card_top,.card_middle{
  display: flex;
  margin-left: 3%;
  width: 94%;
  justify-content: space-between;
  margin-top: 22rpx;
}
.course_name,.mark{
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  margin-right: 20rpx;
}
.mark{
  /* margin-top: 20rpx; */
  margin-left: 16rpx;
  margin-right: auto;
}
.course_name text{
  font-weight: bold;
  font-size: 36rpx;
  max-width: 540rpx;
}
.credit{
  color: #39b54a;
  font-size: 22rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 8rpx;
  border: 1rpx solid;
  border-radius: 20rpx;
  margin-left: 12rpx;
  position: relative;
  top: -4rpx;
}
.mark image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 4rpx;
}
.card_middle{
  font-size: 30rpx;
  color: #707070;
}
.mark text{
  font-size: 34rpx;
  color: #707070;
  font-weight: bold;
}
.card_middle{
  font-size: 28rpx;
  display: block;
}
.mid_item{
  margin: 20rpx 0;
  display: flex;
}
.mid_item::before{
  content:'';
  width: 12rpx;
  height: 40rpx;
  border-radius: 10rpx;
  background-color: #17abe3;
  margin: 0 12rpx;
}
.card_bottom{
  display: flex;

}