/* 搜索框 */

form {
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: rgba(238, 168, 38, 0.6);
  width: 100%;
}

.search-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 550rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #6cace7;
}

.search-box input {
  flex: 4;
  font-size: 90%;
  padding: 10rpx 30rpx;
  text-align: center;
}

.search-box .search-btn {
  flex: 1;
  height: 100%;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #6cace7;
  border-radius: 0 35rpx 35rpx 0rpx;
  border: 2rpx solid #6cace7;
}

button::after {
  border: 0;
}

.search-btn image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

.search-btn-hover {
  opacity: 0.8;
}

/* 总数 */

.total {
  padding: 40rpx 0 20rpx 0;
  font-size: 120%;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: rgba(238, 168, 38, 0.6);
}

.filter {
  position: absolute;
  right: 50rpx;
  line-height: 50rpx;
  font-size: 70%;
  padding: 5rpx 20rpx;
  font-weight: normal;
  border-radius: 20rpx;
  color: white;
  background: #6cace7;
}

/* 教室 */

.room {
  border-bottom: 1rpx solid #ddd;
  padding: 10rpx 30rpx 15rpx 30rpx;
}

.room .p1 {
  font-size: 95%;
  color: grey;
  display: flex;
  flex-direction: row;
  width: 100%;
  line-height: 50rpx;
  padding-left: 10rpx;
}

.flod {
  height: 0rpx;
  overflow: hidden;
  transition: 0.3s;
}

.flod.show {
  height: 250rpx;
}

.p2 view {
  width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.title {
  font-weight: bold;
  padding: 10rpx 0;
  color: rgb(88, 88, 88);
}

.tips {
  color: grey;
  font-size: 85%;
  text-align: center;
  margin: 20rpx;
}

/* 功能栏 */

.nav {
  display: flex;
  flex-direction: roe;
  justify-content: space-around;
  background: rgba(238, 168, 38, 0.6);
  padding: 20rpx;
}

.nav image {
  width: 50rpx;
  height: 50rpx;
  padding: 15rpx;
  border-radius: 50%;
  /* border: 1rpx solid red; */
  background: rgb(236, 245, 206)
}

/* 弹窗 */

.part {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
}

.part input {
  padding: 15rpx 20rpx;
  width: 550rpx;
  border-radius: 15rpx;
  border: 1rpx solid rgba(177, 175, 175, 0.7);
  text-align: left;
}

.selection {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
  margin-left: 20rpx;
  width: 550rpx;
}
