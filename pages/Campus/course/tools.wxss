.query {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 120%;
  margin-top: 30rpx;
}

.part {
  display: flex;
  flex-direction: row;
  margin: 20rpx 30rpx;
  align-items: center;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}

.title {
  flex: 1;
  font-weight: bold;
  padding: 10rpx 0;
  color: rgb(88, 88, 88);
  border-right: 1rpx solid #ddd;
}

picker, .selection {
  flex: 4;
  color: rgb(0, 97, 57);
}

.gen-btn {
  margin: 30rpx auto;
  width: 680rpx;
  color: white;
  font-weight: bold;
}

.q-tip {
  text-align: left;
  font-size: 80%;
  margin: 50rpx;
  color: grey;
}
