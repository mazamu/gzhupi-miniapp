/* 进馆数据 */

.visit {
  text-align: center;
}

.module {
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 1rpx 1rpx 1rpx #ddd;
  margin-bottom: 3rpx;
  padding: 10rpx;
}

.module-bar {
  display: flex;
  flex-direction: row;
  padding: 20rpx 10rpx;
  border-bottom: #f7f7f7f8 solid 4rpx;
}

.module-icon {
  flex: 1;
  width: 75rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.module-text {
  flex: 4;
  display: flex;
  align-items: center;
  font-size: 120%;
  font-weight: bold;
  justify-content: space-around;
}

.table-head {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom: #ddd solid 1rpx;
  color: rgb(114, 195, 228);
}

.table-body {
  display: flex;
  flex-direction: row;
  font-size: 85%;
  padding: 20rpx 15rpx;
  border-bottom: rgb(238, 235, 235) solid 1rpx;
}

.sem-cell {
  border-bottom: #ddd solid 2rpx;
  padding: 20rpx;
}

/* 全景 */

.overall {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overall image {
  width: 400rpx;
  height: 400rpx;
}

/* 书本列表 */

page {
  background: rgba(240, 240, 240, 0.9);
}

.book {
  margin: 15rpx;
  padding: 5rpx;
  border-radius: 20rpx;
  background: white;
  box-shadow: 3rpx 3rpx 5rpx 5rpx #f2f2f2f2;
}

.book-name {
  padding: 10rpx 20rpx;
  color: rgb(75, 15, 15);
}

.book-info {
  display: flex;
  flex-direction: row;
}

.cover {
  flex: 2.5;
  height: 200rpx;
  padding: 10rpx;
}

.book-info image {
  width: 100%;
  height: 100%;
}

.info {
  flex: 5;
  padding: 15rpx;
  margin-left: 30rpx;
  position: relative;
}

.info .author {
  font-size: 80%;
  color: grey;
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.info .pub {
  font-size: 80%;
  color: grey;
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.call-No, .ISBN {
  margin: 15rpx 0;
  color: rgb(141, 83, 83);
  font-size: 90%;
}
